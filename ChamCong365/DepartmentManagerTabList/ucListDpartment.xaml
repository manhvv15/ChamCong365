<UserControl x:Name="UcListDepartment" x:Class="ChamCong365.ucListDpartment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChamCong365"
             mc:Ignorable="d"        
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Grid 
                x:Name="gridFindPhongBan"
                Margin="0 32 0 32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="352"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!--các dropdown box-->
                <Border
                    x:Name="bodSelectCompany"
                    Height="44"
                    Width="382"
                    Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Style="{StaticResource BorderSelected}" MouseLeftButtonUp="bodSelectCompany_MouseLeftButtonUp">
                    <DockPanel>
                        <TextBlock
                    x:Name="txbSelectCompany"
                    Text="Chọn công ty"
                    Width="338"
                        FontSize="16"
                        FontFamily="Roboto"
                        Foreground="#ACACAC"
                    Margin="20 0 0 0"
                    Height="22" />
                        <Image
                    x:Name="imgSelectCompany"

                    Width="14" Height="14"
                    Source="{StaticResource iconDropDownDrawingImage}" />
                    </DockPanel>
                </Border>

                <Border Grid.Column="1"
                        x:Name="bodSelectDepartment"
           
                    Height="44"
                    Width="382"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Style="{StaticResource BorderSelected}" MouseLeftButtonUp="bodSelectDepartment_MouseLeftButtonUp">
                    <DockPanel>
                        <TextBlock
                    x:Name="txbSelectDepartment"
                    Text="Chọn phòng ban"
                    Width="338"
                                                FontSize="16"
                        FontFamily="Roboto"
                        Foreground="#ACACAC"
                            Margin="20 0 0 0"
                    Height="22" />
                        <Image
                    x:Name="imgSelectDepartment"

                    Width="14" Height="14"
                    Source="{StaticResource iconDropDownDrawingImage}" />
                    </DockPanel>
                </Border>
                <!--các button-->
                <Border Grid.Column="3"
                    x:Name="bodAddDepartment"
                    Visibility="Visible"
                    Width="148" Height="44"
                    CornerRadius="5 5 5 5"
                    Background="#42D778"
                    TextBlock.FontSize="16"
                    TextBlock.LineHeight="21.76"
                    TextBlock.FontWeight="DemiBold"
                    TextBlock.Foreground="White"
                    HorizontalAlignment="Right" MouseLeftButtonUp="bodAddDepartment_MouseLeftButtonUp"
                    >
                    <TextBlock
                        Text="+ Thêm mới"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    </TextBlock>
                </Border>

                <Border Grid.Column="3"
                    x:Name="bodFind"

                    Width="148" Height="44"
                    CornerRadius="5 5 5 5"
                    Background="#4C5BD4"
                    TextBlock.FontSize="16"
                    TextBlock.LineHeight="21.76"
                    TextBlock.FontWeight="DemiBold"
                    TextBlock.Foreground="White"
                    HorizontalAlignment="Right"
                    Margin="0 0 180 0"
                    >
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image Width="20" Height="20" Source="{StaticResource iconSearchWhiteDrawingImage}" />

                        <TextBlock
                        Text=" Tìm kiếm"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
            <!--Listview danh sách phòng ban-->
            <ScrollViewer 
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled"
                          >
                <StackPanel
                x:Name="stackDSPhongBan"
                Visibility="Visible"
                >
                    <!--Header danh sách phòng ban-->
                    <Grid Width="1160" VerticalAlignment="Top" Height="44">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="0.4*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Số  thứ tự-->
                        <Border Grid.Column="0"      Background="#4C5BD4"
                            BorderThickness="1"
                            BorderBrush="#4C5BD4"
                    CornerRadius="16 0 0 0">
                            <TextBlock FontFamily = "Roboto" FontSize = "18" FontWeight="Bold" 
                            
                                   Text="STT"
   
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                        </Border>
                        <!--Tên phòng ban-->
                        <Border Grid.Column="1" Style="{StaticResource DpmentBorderListView}">
                            <TextBlock FontFamily = "Roboto" FontSize = "18" FontWeight="Bold" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="Tên phòng ban"/>
                        </Border>
                        <!--Trưởng phòng-->
                        <Border Grid.Column="2" Style="{StaticResource DpmentBorderListView}">
                            <TextBlock FontFamily = "Roboto" FontSize = "18" FontWeight="Bold" 
                                   Text="Trưởng phòng"
                                   HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                        </Border>
                        <!--Phó phòng-->
                        <Border Grid.Column="3" Style="{StaticResource DpmentBorderListView}">
                            <TextBlock FontFamily = "Roboto" FontSize = "18" FontWeight="Bold" 
                                   Text="Phó phòng"
                                   HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                        </Border>
                        <!--Số lượng nhân viên-->
                        <Border Grid.Column="4"
                  
                            Style="{StaticResource DpmentBorderListView}">
                            <TextBlock FontFamily = "Roboto" FontSize = "18" FontWeight="Bold" 
                                Text="Số lượng nhân viên"
                                HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                        </Border>
                        <!--Chức năng-->
                        <Border Grid.Column="5" CornerRadius="0 16 0 0" Style="{StaticResource DpmentBorderListView}">
                            <TextBlock FontFamily = "Roboto" FontSize = "18" FontWeight="Bold" 
                                 Text="Chức năng"
                                 HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                        </Border>

                    </Grid>
                    <!--list department-->
                    <Border 
                BorderBrush="DarkGray"
                CornerRadius="0 0 5 5"
                BorderThickness="1">
                        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    Height="auto"
                    x:Name="lsvDSPhongBan">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="-10 -10 -10 -8" Width="1160" VerticalAlignment="Top" Height="44">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <!--Id-->
                                        <Border BorderThickness="1" BorderBrush="#C4C4C4"
                     
                                        Grid.Column="0">
                                            <TextBlock 
                                   Text="{Binding Id}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#474747"/>
                                        </Border>
                                        <!--Tên Phòng-->
                                        <Border BorderThickness="1" BorderBrush="#C4C4C4" Grid.Column="1">
                                            <TextBlock 
                                   Text="{Binding TenPhongBan}"
                                   FontSize="16"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Foreground="#474747"/>
                                        </Border>
                                        <!--Tên Trưởng phòng-->
                                        <Border BorderThickness="1" BorderBrush="#C4C4C4" Grid.Column="2">
                                            <TextBlock 
                                   Text="{Binding TenTruongPhong}"
                                   FontSize="16"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Foreground="#474747"/>
                                        </Border>
                                        <!--Tên phó phòng-->
                                        <Border BorderThickness="1" BorderBrush="#C4C4C4" Grid.Column="3">
                                            <TextBlock 
                                   Text="{Binding TenPhoPhong}"
                                   FontSize="16"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Foreground="#474747"/>
                                        </Border>
                                        <!--Số lượng nhân viên-->
                                        <Border BorderThickness="1" BorderBrush="#C4C4C4" Grid.Column="4">
                                            <TextBlock 
                                   Text="{Binding soLuongNV}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#474747"/>
                                        </Border>
                                        <!--Tên Phòng-->
                                        <Border BorderThickness="1" BorderBrush="#C4C4C4" Grid.Column="5">
                                            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Image
                                            MouseUp="UpdateDepartment_MouseUp"
                                            Width="24" Height="24" Source="{StaticResource iconEditUnderLineBlueDrawingImage}" />
                                                <Image
                                                Width="24" Height="24"
                                                Source="{StaticResource iconLineDrawingImage}"></Image>
                                                <Image
                                            Width="24" Height="24" Source="{StaticResource iconTrashRedTwoLineDrawingImage}" />

                                            </WrapPanel>

                                        </Border>

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            <!--phần phân trang-->
            <DockPanel 
                    Margin="0 16 0 0"
                    HorizontalAlignment="Center"
                    Width="125" Height="29">
                <Border 
                    HorizontalAlignment="Right"
                        Width="29" Height="29"
                        Style="{StaticResource BorderButon}">
                    <TextBlock 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Text="1"/>
                </Border>
                <Border 
                   Margin="5 0 5 0"
                    Width="29" Height="29"
                    Style="{StaticResource Boder}">
                    <TextBlock 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="2"/>
                </Border>
                <Border 
                    Width="51" Height="29"
                    Style="{StaticResource Boder}">
                    <TextBlock  
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Text="Tiếp"/>
                </Border>
            </DockPanel>
        </StackPanel>

        <!--Collapsed Select company and department-->
        <Grid Margin="0 76 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="224"></ColumnDefinition>
                <ColumnDefinition Width="128"/>

            </Grid.ColumnDefinitions>
            <!--Border
        Lisview Collapsed Select company-->
            <Border Grid.Column="0"
            Panel.ZIndex="1"
            Background="White"
            x:Name="bodListCompany"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            CornerRadius="0 0 5 5"
            BorderThickness="1 0 1 1"
            BorderBrush="Black"
            Height="auto"
            Width="382"
            Visibility="Collapsed" Grid.ColumnSpan="2"
        >
                <Grid>
                    <ListView
                    Padding="10 0 10 0"
                    BorderThickness="1"
                    FontWeight="DemiBold"
                    Foreground="#474747"
                    Height="auto" x:Name="lsvCompany"
                    SelectionChanged="lsvCompany_SelectionChanged"
                    FontSize="16"
                    Grid.Row="1" />
                </Grid>
            </Border>
            <!--Border
        Lisview Collapsed Select Department-->
            <Border Grid.Column="1"
            Panel.ZIndex="1"
            Background="White"
            x:Name="bodListDepartment"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            CornerRadius="0 0 5 5"
            BorderThickness="1 0 1 1"
            BorderBrush="Black"
            Height="auto"
            Width="382"
            Visibility="Collapsed" Grid.ColumnSpan="2"
        >
                <Grid>
                    <ListView
                    Padding="10 0 10 0"
                    BorderThickness="1"
                    FontWeight="DemiBold"
                    Foreground="#474747"
                    Height="auto" x:Name="lsvDepartment"
                    SelectionChanged="lsvDepartment_SelectionChanged"
                    FontSize="16"
                    Grid.Row="1" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
