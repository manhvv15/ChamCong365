<UserControl x:Class="ChamCong365.ucBodyHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChamCong365"
             mc:Ignorable="d">
    <Border 
        CornerRadius="10"
        Height="auto">
        <Grid x:Name="dopFormBody" >
            <Grid
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--Menu Chức Năng-->
                <Grid Cursor="Hand" Grid.Column="0"
                    Height="480"
                    VerticalAlignment="Top"
                    Margin="0 0 30 0"
                    x:Name="stpMenuFunction">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Chấm Công-->
                    <Grid Cursor="Hand" Grid.Row="0"
                      x:Name="grChamCong">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Border 
                            Style="{StaticResource BorderListFunction01}"
                            Background="#97C25F"
                            Grid.ColumnSpan="2" Margin="334,28,0,27">
                        </Border>
                        <Border 
                            x:Name="bodFunctionTimeKeeping"
                            MouseUp="bodFunctionTimeKeeping_MouseUp"
                        Style="{StaticResource BorderListFunction02}">

                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <LinearGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                            <RotateTransform Angle="85" CenterX="0.5" CenterY="0.5"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.RelativeTransform>
                                    <GradientStop Color="White"/>
                                    <GradientStop Color="#FFBFF7FD" Offset="0.7"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock 
                                x:Name="txbChamCong"
                                Text="Chấm Công" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                        </Border>
                        <Border
                        Style="{StaticResource BorderListFunction03}">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="2,1" StartPoint="{DynamicResource LinearGradientBrushStartPoint1}">
                                    <LinearGradientBrush.Transform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform AngleX="50" AngleY="20"/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.Transform>
                                    <GradientStop Color="#97C25F"/>
                                    <GradientStop Color="#7DA047" Offset="0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border Style="{StaticResource ListFunction04}">
                            <TextBlock 
                            x:Name="txbF1"
                            Text="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        </Border>
                        <Border 
                        Height="50" 
                        Margin="250,35,90,35">
                            <Image Source="{StaticResource iconGachDrawingImage}" Margin="42,0,-42,0"/>
                        </Border>
                        <Border Height="50" Width="30" Margin="325 0 0 0">
                            <Image Source="{StaticResource iconTimeDrawingImage}" Margin="-15,0,15,0"/>
                        </Border>
                    </Grid>
                    <!--Quản lý công ty-->
                    <Grid Cursor="Hand" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Border 
                        Style="{StaticResource BorderListFunction01}"
                        Background="#E8811A"
                        Grid.ColumnSpan="2" Margin="334,28,0,27">
                        </Border>
                        <Border 
                        Style="{StaticResource BorderListFunction02}">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <LinearGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                            <RotateTransform Angle="85" CenterX="0.5" CenterY="0.5"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.RelativeTransform>
                                    <GradientStop Color="White"/>
                                    <GradientStop Color="#FFBFF7FD" Offset="0.7"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock  
                            Text="Quản lý công ty"    
                             VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        </Border>
                        <Border 
                        Style="{StaticResource BorderListFunction03}">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="2,1" StartPoint="{DynamicResource LinearGradientBrushStartPoint1}">
                                    <LinearGradientBrush.Transform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform AngleX="50" AngleY="20"/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.Transform>
                                    <GradientStop Color="#FFA13B"/>
                                    <GradientStop Color="#E8811A  " Offset="0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border Style="{StaticResource ListFunction04}">
                            <TextBlock 
                            Text="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment='Center'/>
                        </Border>
                        <Border 
                        Height="50" 
                        Margin="250,35,90,35">
                            <Image Source="{StaticResource iconGachDrawingImage}" Margin="42,0,-42,0"/>
                        </Border>
                        <Border Height="30" Width="30" Margin="325 0 0 0">
                            <Image Source="{StaticResource iconWordDrawingImage}" Margin="-15,0,15,0"/>
                        </Border>
                    </Grid>
                    <!--Đề Xuất-->
                    <Grid Cursor="Hand" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Border
                        Style="{StaticResource BorderListFunction01}"
                        Background="#C1403A"
                        Grid.ColumnSpan="2" Margin="334,28,0,27">
                        </Border>
                        <Border 
                        Style="{StaticResource BorderListFunction02}">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <LinearGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                            <RotateTransform Angle="85" CenterX="0.5" CenterY="0.5"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.RelativeTransform>
                                    <GradientStop Color="White"/>
                                    <GradientStop Color="#FFBFF7FD" Offset="0.7"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock  
                           Text="Đề xuất" 
                          VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        </Border>
                        <Border 
                        Style="{StaticResource BorderListFunction03}">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="2,1" StartPoint="{DynamicResource LinearGradientBrushStartPoint1}">
                                    <LinearGradientBrush.Transform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform AngleX="50" AngleY="20"/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.Transform>
                                    <GradientStop Color="#FF5B4D"/>
                                    <GradientStop Color="#C1403A  " Offset="0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border Style="{StaticResource ListFunction04}">
                            <TextBlock 
                            Text="3" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        </Border>
                        <Border 
                        Height="50" 
                        Margin="250,35,90,35">
                            <Image Source="{StaticResource iconGachDrawingImage}" Margin="42,0,-42,0"/>
                        </Border>
                        <Border 
                        Height="30" 
                        Width="30" 
                        Margin="325 0 0 0">
                            <Image Source="{StaticResource iconListDrawingImage}" 
                               Height="30" VerticalAlignment="Top" 
                               RenderTransformOrigin="0.083,0.473" 
                               Margin="-15,-1,15,0"/>
                        </Border>
                    </Grid>
                    <!--Cài đặt lương-->
                    <Grid Cursor="Hand" Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Border 
                           Style="{StaticResource BorderListFunction01}"
                           Background="#8069FF"
                           Grid.ColumnSpan="2" Margin="334,28,0,27">
                        </Border>
                        <Border x:Name="bodSalarySettings"
                                MouseUp="bodSalarySettings_MouseUp"
                       Style="{StaticResource BorderListFunction02}">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <LinearGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                            <RotateTransform Angle="85" CenterX="0.5" CenterY="0.5"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.RelativeTransform>
                                    <GradientStop Color="White"/>
                                    <GradientStop Color="#FFBFF7FD" Offset="0.7"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock
                                x:Name="txbSalarySettings"
                            Text="Cài đặt lương" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        </Border>
                        <Border 
                        Style="{StaticResource BorderListFunction03}">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="2,1" StartPoint="{DynamicResource LinearGradientBrushStartPoint1}">
                                    <LinearGradientBrush.Transform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform AngleX="50" AngleY="20"/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.Transform>
                                    <GradientStop Color="#8069FF"/>
                                    <GradientStop Color="#5E53C9" Offset="0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border Style="{StaticResource ListFunction04}">
                            <TextBlock
                                x:Name="txbF4"
                            Text="4" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Border>
                        <Border 
                        Height="50" 
                        Margin="250,35,90,35">
                            <Image Source="{StaticResource iconGachDrawingImage}" Margin="42,0,-42,0"/>
                        </Border>
                        <Border 
                        Height="30" 
                        Width="30" 
                        Margin="325 0 0 0">
                            <Image Source="{StaticResource iconDatabaseDrawingImage}" Margin="-15,0,15,0"></Image>
                        </Border>
                    </Grid>
                </Grid>
                <!--Chức năng Chấm công-->
                <Grid Grid.Column="1"
                        x:Name="grLoadFunction"
                        Margin="30 0 0 0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">

                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
